<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/gradientDown</item>
    </style>

    <style name="AppTheme.TransferScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/gradientDown</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLayoutStyle">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:textColor">#f00</item>
    </style>

    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="helpText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="thisDeviceText">
        <item name="android:textColor">#fff</item>
    </style>
</resources>
